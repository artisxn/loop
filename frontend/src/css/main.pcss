@import 'modern-normalize/modern-normalize.css';

body {
  color: #2d3748;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  line-height: 1;
  margin: 0 0 0.5rem 0;
}

h1 {
  font-size: 2rem;
}
h2 {
  font-size: 1.75rem;
}
h3 {
  font-size: 1.5rem;
}
h4 {
  font-size: 1.25rem;
}
h5 {
  font-size: 1rem;
}
h6 {
  font-size: 0.875rem;
}

p {
  line-height: 1.4;
  margin: 0 0 0.5rem 0;
}
